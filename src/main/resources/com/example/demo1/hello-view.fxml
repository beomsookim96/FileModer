<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import org.controlsfx.control.CheckListView?>

<VBox stylesheets="@hello-view.css" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <CheckListView fx:id="filelist"/>
    <TextField promptText="Path" fx:id="jsonpath"/>
    <Button text="SEARCH" onAction="#onHelloButtonClick"/>

    <TextField promptText="Property" fx:id="addProperty"/>
    <TextField promptText="Value" fx:id="addValue"/>
    <Button text="ADD" onAction="#onAddButtonClick"/>
    <TextField promptText="Property" fx:id="subtractProperty"/>
    <Button text="SUBTRACT" onAction="#onSubtractButtonClick"/>

</VBox>
